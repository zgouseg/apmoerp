APP_NAME=HugoERP
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# Trusted Proxies Configuration
# Security: In production, specify your load balancer/proxy IPs (comma-separated)
# Example: APP_TRUSTED_PROXIES=10.0.0.1,10.0.0.2
# WARNING: Using '*' trusts all proxies and allows IP spoofing attacks
APP_TRUSTED_PROXIES=

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
# Session lifetime in minutes (10080 = 7 days, prevents 419 CSRF errors)
SESSION_LIFETIME=10080
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# Set to false in production to maintain sessions across browser restarts
SESSION_EXPIRE_ON_CLOSE=false
# Set to true in production for security (requires HTTPS)
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ===========================================
# Queue Configuration
# ===========================================
# Options: sync, database, redis, sqs
QUEUE_CONNECTION=database

# Queue worker settings (for database driver)
DB_QUEUE_TABLE=jobs
DB_QUEUE=default
DB_QUEUE_RETRY_AFTER=90

# Redis queue settings (recommended for production)
# QUEUE_CONNECTION=redis
REDIS_QUEUE=default
REDIS_QUEUE_RETRY_AFTER=90

# Queue worker command for production:
# php artisan queue:work --queue=default,notifications,emails --tries=3 --timeout=90

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ===========================================
# Broadcasting / WebSocket Configuration
# ===========================================
# Set BROADCAST_CONNECTION to 'reverb' or 'pusher' to enable real-time features
# Options: log, null, reverb, pusher

# Laravel Reverb (Self-hosted WebSocket)
# Run: php artisan reverb:start
REVERB_APP_ID=hugouserp
REVERB_APP_KEY=hugouserp-key
REVERB_APP_SECRET=hugouserp-secret
REVERB_HOST=127.0.0.1
REVERB_PORT=8080
REVERB_SCHEME=http

# Pusher (Cloud WebSocket Service)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Vite broadcasting config
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
